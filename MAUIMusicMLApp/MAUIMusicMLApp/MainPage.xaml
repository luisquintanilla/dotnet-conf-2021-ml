<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIMusicMLApp.MainPage"
             xmlns:mf="clr-namespace:Manufaktura.Controls.XamarinFormsSkia;assembly=Manufaktura.Controls.XamarinFormsSkia"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <StackLayout>
            <Grid
            ColumnDefinitions="33.33*,33.33*,33.33*"
            ColumnSpacing="8"
            HorizontalOptions="FillAndExpand">
                <Button x:Name="PlayButton" Text="Play" Grid.Column="0" HorizontalOptions="FillAndExpand" Clicked="PlayButton_Clicked"></Button>
                <Button x:Name="StopButton" Text="Stop" Grid.Column="1" HorizontalOptions="FillAndExpand" Clicked="StopButton_Clicked"></Button>
                <Button x:Name="RepairButton" Text="Repair" Grid.Column="2" HorizontalOptions="FillAndExpand" Clicked="RepairButton_Clicked"></Button>
            </Grid>
            <Picker Title="Select a song"
                    x:Name="SongPicker"/>
            <StackLayout x:Name="MusicScore" HorizontalOptions="CenterAndExpand"></StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
